{{ header }}
<div id="content">
	<div class="page-header">
		<div class="container">
			<h1>{{ heading_title }}</h1>
		</div>
	</div>
	<div class="container">
		<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} <button type="button" class="close" data-bs-dismiss="alert"></button></div>
		<div class="card">
			<div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_step_4 }}</div>
			<div class="card-body p-4">
				<div class="row mb-4">
					<div class="col-6 text-center">
						<a href="../"><img src="view/image/catalog.jpg" alt="OpenCart" title="OpenCart" class="img-thumbnail"/></a>
						<br/>
						<a href="../" class="btn btn-outline-secondary mt-3">{{ text_catalog }}</a>
					</div>
					<div class="col-6 text-center">
						<a href="../admin/" class="mb-3"><img src="view/image/admin.jpg" alt="OpenCart" title="OpenCart" class="img-thumbnail"/></a>
						<br/>
						<a href="../admin/" class="btn btn-outline-secondary mt-3">{{ text_admin }}</a>
					</div>
				</div>
        <legend><i class="fa fa-envelope-o"></i> {{ text_featured }}</legend>
        <div class="row mb-4">
            {% for extension in promotion.extensions %}
            <div class="col-6 text-center">
              <a class="thumbnail pull-left" href="{{ extension.href }}"><img src="{{ extension.image }}" alt="{{ extension.name }}"/></a>
              <h5>{{ extension.name }}</h5>
              <p>{{ extension.price }}<a target="_BLANK" href="{{ extension.href }}">{{ text_view }}</a></p>
              <div class="clearfix"></div>
            </div>
          {% endfor %}
        </div>
				<div class="m-4 text-center">
          <a href="https://opencartforum.com/files/&utm_source=ocstore4_install&utm_medium=store_link&utm_campaign=ocstore4_install" target="_blank" class="btn btn-outline-secondary">{{ text_extension }}</a>
        </div>
				<fieldset class="mb-5">
					<legend><i class="fa fa-envelope-o"></i> {{ text_mail }}</legend>
					<div class="text-center">
						<p class="pb-2">{{ text_mail_description }}</p>
						<a href="https://ocstore.com/subscribe/" target="_blank" class="btn btn-primary"><i class="fa fa-envelope-o"></i> {{ button_mail }}</a>
					</div>
				</fieldset>
				<div class="row mb-4">
					<div class="col-4 text-center">
						<h3><a href="https://www.facebook.com/opencartforum" target="_blank" class="icon transition"><i class="fa fa-facebook"></i></a> {{ text_facebook }}</h3>
						<p>{{ text_facebook_description }}</p>
						<a href="https://www.facebook.com/opencartforum" target="_blank">{{ text_facebook_visit }}</a>
					</div>
					<div class="col-4 text-center">
						<h3><a href="https://opencartforum.com/?utm_source=ocstore_install&utm_medium=forum_link&utm_campaign=ocstore_install" target="_blank" class="icon transition"><i class="fa fa-comments"></i></a> {{ text_forum }}</h3>
						<p>{{ text_forum_description }}</p>
						<a href="https://opencartforum.com/?utm_source=ocstore_install&utm_medium=forum_link&utm_campaign=ocstore_install" target="_blank">{{ text_forum_visit }}</a>
					</div>
					<div class="col-4 text-center">
						<h3><a href="https://dedicated.ocstore.com/?utm_source=ocstore_install&utm_medium=partner_link&utm_campaign=ocstore_install" target="_blank" class="icon transition"><i class="fa fa-user"></i></a> {{ text_commercial }}</h3>
						<p>{{ text_commercial_description }}</p>
						<a href="https://dedicated.ocstore.com/?utm_source=ocstore_install&utm_medium=partner_link&utm_campaign=ocstore_install" target="_blank">{{ text_commercial_visit }}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{ footer }}

<h3>{{ heading_title }}</h3>
<div class="list-group mb-3">
  {% for manufacturer in manufacturers %}
    {% if manufacturer.manufacturer_id == manufacturer_id %}
      <a href="{{ manufacturer.href }}" class="list-group-item active">{{ manufacturer.name }}</a>
    {% else %}
      <a href="{{ manufacturer.href }}" class="list-group-item">{{ manufacturer.name }}</a>
    {% endif %}
  {% endfor %}
</div>